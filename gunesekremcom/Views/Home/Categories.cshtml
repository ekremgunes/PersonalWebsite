@model List<GetCategoriesQueryResult>
@section title{
    gunesekrem.com | Kategoriler
}

<!-- ***** BANNER ***** -->
<div class="row  m-2 large-div">

    <div class="col-lg-12 p-4">
        <h2>Kategoriler</h2>
    </div>

</div>

<div class="row mt-1">

    <div class="col-12  my-3 mb-4">
        <div class="large-div p-5">
            <!-- buraya bastır -->
            <div class="p-5 text-center">
                @if (Model.Count > 0)
                {
                    var random = new Random();
                    foreach (var category in Model)
                    {
                        var size = 10 + category.PostCount + random.Next(2,10);
                        size = size > 55 ? 55 :size;
                        <a href="/Blog/Explorer?category=@category.Title" class="category-tag" style="font-size: @(size)px;">@(category.Title)(@category.PostCount)</a>
                    }
                }
                else
                {
                    <p>Henüz kategori yok</p>
                }

               

            </div>

        </div>


    </div>
</div>
