@model List<GetEducationsQueryResult>

@section title{
    gunesekrem.com | Eğitimler
}

<div class="col-lg-12">
    <div style="margin-top: 0;" class="most-popular">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-section">
                    <h4><em></em> Eğitimler</h4>
                </div>
                <div class="row">
                    @if (Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="item">
                                    <a href="/Home/Education?slug=@item.Slug">
                                        <img src="/images/@item.Image" alt="not found">
                                        <h5 class="mt-2">
                                            @item.Title
                                        </h5>
                                        <div class="text-center">
                                            @Html.Raw(item.Definition.Length > 50 ? item.Definition.Substring(0, 50) : item.Definition.Substring(0, item.Definition.Length))

                                        </div>

                                        <div class="d-flex justify-content-center align-items-center">
                                            <span class="mx-2 "><i class=" purple mr-1 fa-solid fa-user-graduate"></i>@item.StudentCount</span>
                                            <span class="mx-2"><i class="darkblue mr-1 fa-solid fa-eye"></i>@item.ViewCount</span>
                                        </div>
                                    </a>

                                </div>
                            </div>

                        }
                    }
                    else
                    {
                        <p>Henüz bir eğitim yüklenmemiş</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
