@model List<GetProjectsQueryResult>
@section title{
    gunesekrem.com | Projelerim
}

<div class="live-stream" style="margin-top:0 !important;">
    <div class="col-lg-12">
        <div class="heading-section">
            <h4><em>Bitmiş</em> Projeler</h4>
        </div>
    </div>
    <div class="row">
        @if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="item">
                        <div class="thumb">
                            <img src="/images/@item.Image" alt="Not found" style="min-height:9rem;max-height:15rem">
                            <div class="hover-effect">
                                <div class="content">
                                    <div class="live">
                                        <a href="javascript:void(0)">
                                            @for (int i = 0; i < item.Star; i++)
                                            {
                                                <span>⭐</span>
                                            }
                                        </a>
                                    </div>
                                    <ul>
                                        <li><a href="/Home/Project/@item.Id"><i class="fa fa-eye"></i>İncele</a></li>
                                        @if (item.Url?.Length > 1)
                                        {
                                            <li><a href="@item.Url"><i class="fa-brands fa-github"></i>Github</a></li>

                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="">
                            <h4><a style="word-wrap:break-word" href="/Home/Project/@item.Id"> @item.Title</a></h4>
                        </div>
                    </div>
                </div>

            }
        }
        else
        {
            <p class="col-ml-12 tex-center">Yeni projeler üzerinde çalışıyorum :)</p>
        }


        @*<div class="col-lg-12">
            <div class="main-button">
                <a href="streams.html">Daha fazla proje</a>
            </div>
        </div>*@
    </div>
</div>
