@model CreateTechnologyCommand
@{
    Layout = "../Shared/_DashboardLayout.cshtml";
}

<div class="card mt-5">
    <div class="card-body">
        <h4 class="header-title">Teknoloji Oluştur</h4>

        <form asp-controller="Portfolio" asp-action="CreateTechnology" method="post" enctype="multipart/form-data">
            <div class="mb-4">
                <label asp-for="@Model.Title">Adı</label>
                <input class="form-control" type="text" asp-for="@Model.Title">
                <span class="text-danger" asp-validation-for="@Model.Title"></span>
            </div>
            <div class="mb-4">
                <label asp-for="@Model.Icon">Icon </label>
                <input class="form-control" type="file" name="IconFile">
                <span class="text-danger" asp-validation-for="@Model.Icon"></span>
            </div>
            <div class="mb-4">
                <label asp-for="@Model.ColorCode">Renk Kodu</label>
                <input class="d-block" style="padding:0px;" type="color"  value="#fff" asp-for="@Model.ColorCode">
                <span class="text-danger" asp-validation-for="@Model.ColorCode"></span>
            </div>
            <div class="mb-4">
                <label asp-for="@Model.order">Sıra Numarası(opsiyonel)</label>
                <input class="form-control" type="number" value="1" asp-for="@Model.order">
                <span class="text-danger" asp-validation-for="@Model.order"></span>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>

        </form>
    </div>
</div>