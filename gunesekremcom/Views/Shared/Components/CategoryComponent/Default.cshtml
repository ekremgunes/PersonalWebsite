@model List<CategoryComponentQueryResult>

<div class="col-lg-3">
    <div class="top-downloaded">
        <div class="heading-section">
            <a href="#">
                <h4 style="font-size: 22px;">Kategoriler</h4>
            </a>
        </div>
        <ul>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <a href="/Blog/Explorer?category=@item.Title">
                    <li>
                        <h4>@item.Title</h4>

                        <span>
                            <i class="fa fa-star" style="color: yellow;"></i>
                            @item.PostCount
                        </span>
                    </li>
                    </a>
                }
            }
            else
            {
                <a href="javascript:void(0)">
                <li>
                    <h4 class="text-center">Henüz Bir Kategori Yüklenmedi</h4>                    
                </li>
                </a>
            }

            



        </ul>
        <div class="text-button">
            <a href="/Home/Categories">Tüm Kategoriler</a>
        </div>
    </div>
</div>
