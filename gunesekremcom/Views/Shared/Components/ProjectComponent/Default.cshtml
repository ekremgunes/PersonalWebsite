@model List<ProjectComponentQueryResult>

<div class="most-popular">
    <div class="row">
        <div class="col-lg-12">
            <div class="heading-section">
                <h4><em>Öne çıkan</em> Projelerim</h4>
            </div>
            <div class="row">
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-lg-3 col-sm-6">
                            <div class="item">
                                <a href="/Home/Project/@item.Id">
                                    <img style="object-fit:cover" src="~/images/@item.Image" alt="not found">
                                    <h4 style="word-wrap:break-word;max-width:100%">@item.Title</h4>
                                    <li><i class="fa fa-star"></i> @item.Star</li>
                                   
                                </a>

                            </div>
                        </div>

                    }
                }
                else
                {
                    <p class="col-12 text-center">Yeni projeler üzerinde çalışıyorum :)</p>
                }
                
                
                <div class="col-lg-12">
                    <div class="main-button">
                        <a href="/Home/Projects">Projeler</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>